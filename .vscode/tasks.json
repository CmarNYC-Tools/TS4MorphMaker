{
    "version": "2.0.0",
    "options": {
        "env": {
            "TS4MORPHMAKER_VERSION":"4.5.2.3"
        }
    },
    "tasks": [
        {
            "label": "buildn",
            "options": { "statusbar": {"hide": true}},
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/src/TS4MorphMaker.NET.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "options": { "statusbar": {"hide": true}},
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/TS4MorphMaker.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "options": { "statusbar": {"hide": false}},
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "src/TS4MorphMaker.csproj",
                "-c:Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "wine üç∑",
            "command": "wine",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}/src/bin/Debug/net6.0-windows/win-x64/"
            },
            "dependsOn":[
                "buildn"
            ],
            "args":[
                "TS4MorphMaker.exe"
            ]
        }
    ]
}